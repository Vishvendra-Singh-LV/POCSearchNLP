@{
    ViewData["Title"] = "AI-Powered Search";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --dark-bg: #0f0f23;
        --card-bg: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.2);
        --neon-blue: #00d4ff;
        --neon-purple: #a855f7;
        --neon-green: #10b981;
    }

    body {
        background: var(--dark-bg);
        background-image: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.2) 0%, transparent 50%);
        min-height: 100vh;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .futuristic-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .title-section {
        text-align: center;
        margin-bottom: 60px;
    }

    .main-title {
        font-size: 3.5rem;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 800;
        margin-bottom: 20px;
        text-shadow: 0 0 30px rgba(102, 126, 234, 0.5);
    }

    .subtitle {
        font-size: 1.3rem;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 10px;
    }

    .description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1rem;
    }

    .search-container {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 40px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .search-form {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .input-group {
        position: relative;
    }

    .search-input {
        width: 100%;
        padding: 20px 25px;
        font-size: 1.1rem;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid transparent;
        border-radius: 15px;
        color: white;
        outline: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

        .search-input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .search-input:focus {
            border-color: var(--neon-blue);
            box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
            background: rgba(255, 255, 255, 0.15);
        }

    .submit-btn {
        background: var(--primary-gradient);
        border: none;
        padding: 18px 40px;
        font-size: 1.2rem;
        font-weight: 600;
        color: white;
        border-radius: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .submit-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .submit-btn:hover::before {
            left: 100%;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

    .result-container {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .result-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 25px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .result-title-section {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .result-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: var(--secondary-gradient);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .result-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--neon-blue);
    }

    .result-stats {
        display: flex;
        gap: 15px;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
        flex-wrap: wrap;
    }

    .stat-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 5px 12px;
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .result-content {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        padding: 20px;
        border-left: 4px solid var(--neon-purple);
        white-space: pre-wrap;
        font-family: 'Courier New', monospace;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    /* Dynamic Table Styles */
    .data-table-container {
        overflow-x: auto;
        border-radius: 15px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid var(--glass-border);
        max-height: 600px;
        overflow-y: auto;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
        min-width: 600px;
    }

        .data-table th {
            background: var(--primary-gradient);
            color: white;
            padding: 15px 12px;
            text-align: left;
            font-weight: 600;
            border-bottom: 2px solid var(--neon-blue);
            position: sticky;
            top: 0;
            z-index: 10;
            text-transform: capitalize;
        }

            .data-table th:first-child {
                border-top-left-radius: 15px;
            }

            .data-table th:last-child {
                border-top-right-radius: 15px;
            }

        .data-table td {
            padding: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.9);
            transition: background-color 0.3s ease;
            vertical-align: top;
            word-wrap: break-word;
            max-width: 300px;
        }

        .data-table tr:hover td {
            background: rgba(0, 212, 255, 0.1);
        }

        .data-table tr:nth-child(even) td {
            background: rgba(255, 255, 255, 0.05);
        }

        .data-table tr:nth-child(even):hover td {
            background: rgba(0, 212, 255, 0.15);
        }

    /* Smart column styling based on data type */
    .numeric-cell {
        text-align: right;
        color: var(--neon-green);
        font-family: 'Courier New', monospace;
    }

    .url-cell {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

        .url-cell a {
            color: var(--neon-blue);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .url-cell a:hover {
                color: var(--neon-purple);
                text-decoration: underline;
            }

    .boolean-cell {
        text-align: center;
        font-weight: bold;
    }

    .null-cell {
        color: rgba(255, 255, 255, 0.4);
        font-style: italic;
        text-align: center;
    }

    .no-data {
        text-align: center;
        padding: 40px;
        color: rgba(255, 255, 255, 0.6);
        font-style: italic;
    }

    .error-message {
        background: rgba(245, 87, 108, 0.2);
        border: 1px solid rgba(245, 87, 108, 0.5);
        color: #ff6b6b;
        padding: 15px;
        border-radius: 10px;
        margin-top: 20px;
    }

    .loading {
        display: none;
        text-align: center;
        padding: 20px;
    }

        .loading.show {
            display: block;
        }

    .spinner {
        width: 40px;
        height: 40px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-top: 3px solid var(--neon-blue);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 15px;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .main-title {
            font-size: 2.5rem;
        }

        .search-container {
            padding: 25px;
        }

        .search-input {
            padding: 15px 20px;
        }

        .submit-btn {
            padding: 15px 30px;
        }

        .result-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .result-stats {
            width: 100%;
        }

        .data-table {
            font-size: 0.8rem;
            min-width: 500px;
        }

            .data-table th,
            .data-table td {
                padding: 8px 6px;
            }

        .futuristic-container {
            max-width: 100%;
            padding: 20px 10px;
        }
    }
</style>

<div class="futuristic-container">
    <div class="title-section">
        <h1 class="main-title">AI-Powered Search</h1>
        <p class="subtitle">Natural Language to SQL Query Engine</p>
        <p class="description">Ask questions about car parts in plain English and get instant results</p>
    </div>

    <div class="search-container">
        <form class="search-form" method="post" action="@Url.Action("Search", "Home")" id="searchForm">
            <div class="input-group">
                <input type="text"
                       class="search-input"
                       name="query"
                       placeholder="e.g., 'Show me all brake pads for Toyota Camry 2020' or 'Find parts under $50 for Honda models'"
                       value="@ViewBag.Query"
                       required>
            </div>
            <button type="submit" class="submit-btn">
                <span>🚀 Search with AI</span>
            </button>
        </form>

        <div class="loading" id="loadingIndicator">
            <div class="spinner"></div>
            <p>Processing your query with AI...</p>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="error-message fade-in">
            <strong>⚠️ Error:</strong> @ViewBag.Error
        </div>
    }

    @if (ViewBag.Success == true && ViewBag.Result != null)
    {
        <div class="result-container fade-in">
            <div class="result-header">
                <div class="result-title-section">
                    <div class="result-icon">🤖</div>
                    <div class="result-title">Generated SQL Query</div>
                </div>
            </div>
            <div class="result-content">@ViewBag.Result</div>

            @if (ViewBag.DbResults != null)
            {

                var results = ViewBag.DbResults as List<Dictionary<string, object>>;


                <div class="result-header">
                    <div class="result-title-section">
                        <div class="result-icon">📊</div>
                        <div class="result-title">Query Results</div>
                    </div>
                </div>

                <div class="data-table-container">
                    @if (results != null && results.Any())
                    {
                        <table class="data-table">
                            <thead>
                                <tr>
                                    @foreach (var columnKey in results.First().Keys)
                                    {
                                        <th>@FormatColumnHeader(columnKey)</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in results)
                                {
                                    <tr>
                                        @foreach (var columnKey in row.Keys)
                                        {

                                            var cellValue = row[columnKey];
                                            var cellClass = GetCellClass(cellValue);
                                            var displayValue = FormatCellValue(cellValue);

                                            <td class="@cellClass">@Html.Raw(displayValue)</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="no-data">
                            <p>🔍 No results found for your query.</p>
                            <p>Try adjusting your search terms or ask a different question.</p>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<script>
    document.getElementById('searchForm').addEventListener('submit', function() {
        document.getElementById('loadingIndicator').classList.add('show');
    });

    // Add floating particles effect
    function createParticle() {
        const particle = document.createElement('div');
        particle.style.cssText = `
            position: fixed;
            width: 4px;
            height: 4px;
            background: rgba(0, 212, 255, 0.6);
            border-radius: 50%;
            pointer-events: none;
            z-index: -1;
            left: ${Math.random() * 100}vw;
            top: 100vh;
            animation: float-up 8s linear forwards;
        `;

        document.body.appendChild(particle);

        setTimeout(() => {
            particle.remove();
        }, 8000);
    }

    // Create floating particles
    setInterval(createParticle, 2000);

    // Add CSS animation for particles
    const style = document.createElement('style');
    style.textContent = `
        @@keyframes float-up {
            to {
                transform: translateY(-100vh) rotate(360deg);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);
</script>

@functions {

    private string FormatColumnHeader(string columnName)
    {
        if (string.IsNullOrWhiteSpace(columnName))
            return string.Empty;

        var result = columnName.Trim();

        // Handle common separators
        result = result.Replace("_", " ").Replace("-", " ");

        // Insert spaces before capital letters, but keep acronyms intact
        // Examples:
        // "OemName" -> "Oem Name"
        // "OEMName" -> "OEM Name"
        // "EquipmentModels" -> "Equipment Models"
        result = System.Text.RegularExpressions.Regex.Replace(result,
            "(?<!^)(?=[A-Z][a-z])", " "); // space before capital letter followed by lowercase

        // Handle cases like "IDNumber" -> "ID Number"
        result = System.Text.RegularExpressions.Regex.Replace(result,
            "(?<=[a-z])(?=[A-Z])", " ");

        // Handle multiple spaces
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+", " ");

        // Split into words and capitalize properly
        var words = result.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        for (int i = 0; i < words.Length; i++)
        {
            if (words[i].Length > 1 && words[i].All(char.IsUpper))
            {
                // Keep acronyms (like OEM, ID) in uppercase
                continue;
            }
            words[i] = char.ToUpper(words[i][0]) + words[i].Substring(1).ToLower();
        }

        return string.Join(" ", words);
    }


    private string GetCellClass(object value)
    {
        if (value == null || value == DBNull.Value)
            return "null-cell";

        var valueType = value.GetType();

        // Check for numeric types
        if (valueType == typeof(int) || valueType == typeof(long) ||
            valueType == typeof(decimal) || valueType == typeof(double) ||
            valueType == typeof(float) || valueType == typeof(short))
            return "numeric-cell";

        // Check for boolean
        if (valueType == typeof(bool))
            return "boolean-cell";

        // Check for URL in string
        var stringValue = value.ToString();
        if (stringValue != null && (stringValue.StartsWith("http://") || stringValue.StartsWith("https://")))
            return "url-cell";

        return "";
    }

    private string FormatCellValue(object value)
    {
        if (value == null || value == DBNull.Value)
            return "null";

        var valueType = value.GetType();

        // Handle boolean values
        if (valueType == typeof(bool))
        {
            bool boolValue = (bool)value;
            return boolValue ?
                "<span style='color: var(--neon-green);'>✓ True</span>" :
                "<span style='color: #ff6b6b;'>✗ False</span>";
        }

        // Handle URL values
        var stringValue = value.ToString();
        if (stringValue != null && (stringValue.StartsWith("http://") || stringValue.StartsWith("https://")))
        {
            var displayText = stringValue.Length > 50 ? stringValue.Substring(0, 47) + "..." : stringValue;
            return $"<a href='{stringValue}' target='_blank' title='{stringValue}'>{System.Web.HttpUtility.HtmlEncode(displayText)}</a>";
        }

        // Handle decimal/currency formatting
        if (valueType == typeof(decimal))
        {
            var decimalValue = (decimal)value;
            // If the value appears to be currency (has decimal places and reasonable range)
            if (decimalValue > 0 && decimalValue < 1000000)
                return $"${decimalValue:N2}";
            return decimalValue.ToString("N2");
        }

        if (valueType == typeof(double) || valueType == typeof(float))
        {
            var doubleValue = Convert.ToDouble(value);
            return doubleValue.ToString("N2");
        }

        // Handle integer formatting
        if (valueType == typeof(int) || valueType == typeof(long) || valueType == typeof(short))
        {
            return value.ToString();
        }

        // Default string handling with HTML encoding
        return System.Web.HttpUtility.HtmlEncode(stringValue ?? "");
    }
}